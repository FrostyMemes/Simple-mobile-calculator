<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="addChar"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ResultField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="#000000"
                app:backgroundTint="#C3C3C3"
                app:rippleColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOpenBracket"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="("
                    android:textColor="#000000"
                    app:backgroundTint="#C3C3C3"
                    app:rippleColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnCloseBracket"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=")"
                    android:textColor="#000000"
                    app:backgroundTint="#C3C3C3"
                    app:rippleColor="#FFFFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/btProcent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:onClick="clickProcent"
                android:text="%"
                android:textColor="#000000"
                app:backgroundTint="#C3C3C3"
                app:rippleColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:onClick="addChar"
                android:text="/"
                app:backgroundTint="#FFAB00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="1"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="2"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="3"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btnSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="+"
                app:backgroundTint="#FFAB00" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="4"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="5"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="6"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="-"
                app:backgroundTint="#FFAB00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="7"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="8"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addChar"
                android:text="x"
                app:backgroundTint="#FFAB00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:onClick="addChar"
                android:text="0"
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:onClick="addChar"
                android:text=","
                app:backgroundTint="#3C3C3C" />

            <Button
                android:id="@+id/btnResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="="
                app:backgroundTint="#FFAB00" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>